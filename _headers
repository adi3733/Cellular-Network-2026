/* 
  Prevent caching of main HTML
*/
 /index.html
  Cache-Control: no-cache, no-store, must-revalidate


/*
  Prevent caching of editable text/code/docx files
*/
 /assets/*.txt
  Cache-Control: no-cache, no-store, must-revalidate

 /assets/*.docx
  Cache-Control: no-cache, no-store, must-revalidate


/*
  Cache static files aggressively (1 year)
*/
 /assets/*.(png|jpg|jpeg|svg|webp|ico|json|js|css|ttf|woff|woff2)
  Cache-Control: public, max-age=31536000, immutable


